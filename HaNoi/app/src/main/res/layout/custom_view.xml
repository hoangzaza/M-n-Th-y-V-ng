<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_custom_avatar"
                android:layout_width="250dp"
                android:layout_height="@dimen/size_150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/home_screen" />


            <TextView
                android:id="@+id/txt_custom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhà nghỉ bách khoa"
                android:layout_marginTop="@dimen/size_8dp"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="horizontal">


                <RatingBar
                    android:id="@+id/rate_bar_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_alignParentLeft="true"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="4.5"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_gravity="center"
                    android:transformPivotX="0dp"
                    android:gravity="center"
                    android:stepSize="0.5">
                </RatingBar>

                <TextView
                    android:id="@+id/txt_custom_sl_danh_gia"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_10dp"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_gravity="center"
                    android:text="4 đánh giá"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp">
                <TextView
                    android:id="@+id/txt_custom_the_loai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:textColor="@color/colorRed"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/size_10dp"

                    android:layout_centerVertical="true"
                    android:text="Ăn trưa"/>
                <TextView
                    android:id="@+id/txt_custom_khoang_cach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_centerVertical="true"
                    android:text="160km"
                     />
            </RelativeLayout>


        </LinearLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>